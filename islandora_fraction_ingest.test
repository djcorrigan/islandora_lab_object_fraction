<?php

/**
* @file islandora_fraction_ingest.test
*
* First, attempts to ingest a fraction object.
*
* Then the test will purge the object.
*
* The pid used for the duration of this test will be islandora:test_fraction
*
*
* @author Dalton Mackenzie <demackenzie@upei.ca>
*/

class IslandoraFractionIngestTestCase extends IslandoraWebTestCase {

  /**
  * Get test information
  *
  * @see IslandoraWebTestCase::getInfo()
  */

  public static function getInfo() {
    return array(
      'name' => 'Fraction Ingest/Purge Test',
      'description' => 'Ingests and deletes a fraction',
      'group' => 'Islandora Fraction',
    );
  }

  /**
  * Set up the test environment.
  *
  * @see IslandoraWebTestCase::setUp()
  */

  public function setUp() {
    parent::setUp(array(
      'islandora',
      'islandora_lab_object_fraction',
      'islandora_basic_collection',
      )
    );
  }

  /**
  * @function testIngestFraction()
  *
  * @author Dalton Mackenzie <demackenzie@upei.ca>
  *
  * Creates an administrative user and attempts to ingest a fraction.
  */

  public function testIngestFraction() {
    

    //Gets the admin user

    $user = $this->admin;

    //Logs them in.

    $this->drupalLogin($user);

    //Get the path to the module to prepend it to the path to fixtures,
    //a directory containing the datastreams required to test ingest the object.

    $path = drupal_get_path('module', 'islandora_lab_object_fraction');

    $path = $path . "/"; //Add a slash because fixtures/$file will be coming after this.

    //Create a fraction properties array for the construction and ingestion of a fraction object.
    $fraction_properties = array();   //init the array
    $fraction_properties['label'] = 'fraction_test';   //Give it a label
    $fraction_properties['pid'] = 'islandora:test_fraction';  //PID
    $fraction_properties['models'] = array(   //The content model used is the fractionect_cmodel
        'islandora:fraction_cmodel',
        );
    $fraction_properties['parent'] = 'islandora:root'; //Just use root as the parent for now, delete it at the end of the test.

    $fraction_datastreams = array(); // init the data streams array


    //The datastreams for the object will be taken from files in the fixtures directory
    
    $fraction_datastream_dc = array(); //Init the Dublin Core datastream
    $fraction_datastream_dc['dsid'] = 'DC';  //dsid comes from the ds composite model in the xml directory
    $fraction_datastream_dc['path'] = $path . 'fixtures/example_fraction_dc.xml'; //Path to the file containing the datastream
    $fraction_datastream_dc['control_group'] = 'M'; //M - managed by Fedora, X - in line XML
    $fraction_datastream_dc['mimetype'] = 'text/xml';

    $fraction_datastream_fraction = array(); //Init the FRACTION datastream
    $fraction_datastream_fraction['dsid'] = 'FRACTION'; //dsid comes from the ds composite model in the xml directory
    $fraction_datastream_fraction['path'] = $path . 'fixtures/example_fraction_fraction.xml'; //Path to the file containing the datastream
    $fraction_datastream_fraction['control_group'] = 'M'; //M - managed by Fedora, X - in line XML
    $fraction_datastream_fraction['mimetype'] = 'text/xml';

    $fraction_datastream_relsext = array(); //Init the RELS-EXT datastream
    $fraction_datastream_relsext['dsid'] = 'RELS-EXT'; //dsid comes from the ds composite model in the xml directory
    $fraction_datastream_relsext['path'] = $path . 'fixtures/example_fraction_relsext.rdf'; //Path to the file containing the datastream
    $fraction_datastream_relsext['control_group'] = 'M'; //M - managed by Fedora, X - in line XML
    $fraction_datastream_relsext['mimetype'] = 'text/xml';

    //Add all of the datastreams to the datastreams array

    $fraction_datastreams[] = $fraction_datastream_dc;
    $fraction_datastreams[] = $fraction_datastream_fraction;
    $fraction_datastreams[] = $fraction_datastream_relsext;

    //Ingest the object with its properties array and datastreams array.

    try {
      $fraction_test_object = $this->ingestConstructedObject($fraction_properties, $fraction_datastreams);
    }
    catch (RepositoryException $re) {
      echo 'Caught exception: ', $re->getMessage(), "\n";
    }

    //We can turn off the safety here because we know exactly what's being deleted,
    //and it's only within the test framework, not the actual database.


    //Delete the object
    $this->deleteObject('islandora:test_fraction', $button = NULL, $safety = FALSE);
  }
}
